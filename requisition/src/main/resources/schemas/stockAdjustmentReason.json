{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "The stock adjustment reason.",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "reasonType": {
      "type": "string",
      "enum": [
        "CREDIT",
        "DEBIT",
        "BALANCE_ADJUSTMENT"
      ]
    },
    "reasonCategory": {
      "type": "string",
      "enum": [
        "TRANSFER",
        "ADJUSTMENT",
        "PHYSICAL_INVENTORY"
      ]
    },
    "isFreeTextAllowed": {
      "type": "boolean"
    },
    "hidden": {
      "type": "boolean"
    }
  }
}